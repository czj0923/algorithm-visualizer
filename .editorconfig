# 表示是最顶层的配置文件，发现设为true时，才会停止查找.editorconfig文件
root = true

# 匹配全部文件
[*]
# 设置字符集
charset = utf-8
# 缩进风格，可选"space"、"tab"
indent_style=space
# 缩进的空格数
indent_size = 2
# 结尾换行符，可选"lf"、"cr"、"crlf"
end_of_line = lf
# 在文件结尾插入新行
insert_final_newline = true
# 设为true表示会去除换行行首的任意空白字符
trim_trailing_whitespace = true
